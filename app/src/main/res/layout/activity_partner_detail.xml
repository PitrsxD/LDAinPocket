<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/partner_company_name"
        style="@style/Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Company Name" />

    <LinearLayout
        android:id="@+id/partner_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/partner_company_name"
        android:orientation="horizontal">

        <TextView
            android:layout_weight="1"
            android:id="@+id/partner_description"
            style="@style/item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Curabitur ligula sapien, pulvinar a vestibulum quis, facilisis vel sapien. Nullam justo enim, consectetuer nec, ullamcorper ac, vestibulum in, elit. Maecenas libero. Fusce tellus odio, dapibus..." />


        <ImageView
            android:id="@+id/partner_image"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:visibility="gone"/>
    </LinearLayout>

    <TextView
        android:id="@+id/partner_age_title"
        style="@style/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/partner_description_layout"
        android:text="Age category:" />

    <TextView
        android:id="@+id/partner_age"
        style="@style/item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/partner_description_layout"
        android:layout_toEndOf="@id/partner_age_title"
        tools:text="13 - 19" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/partner_age_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/partner_phone_title"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Phone:" />

            <TextView
                android:id="@+id/partner_phone"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="00420774051339" />

            <Button
                android:id="@+id/partner_phone_button"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Phone:" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/partner_email_title"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Email:" />

            <TextView
                android:id="@+id/partner_email"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="info@lda-vertneglio.hr" />

            <Button
                android:id="@+id/partner_email_button"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Email:" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/partner_address_title"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="Address:" />

            <TextView
                android:id="@+id/partner_address"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Turisticka 4, Brtonigla, Croatia" />

            <Button
                android:id="@+id/partner_address_button"
                style="@style/item"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Address:" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>