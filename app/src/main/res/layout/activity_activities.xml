<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/parent_layout_activities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/progress_bar_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
             />

        <TextView
            android:id="@+id/header_events"
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_closest_events" />


        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/events_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_events"
            android:layout_margin="@dimen/margin_small"
            android:divider="@null"
            android:orientation="vertical" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/parent_layout_partners"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/parent_layout_activities"
        >

        <ProgressBar
            android:id="@+id/progress_bar_partners"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/header_partners"
            style="@style/Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:text="@string/title_partners"/>


        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/partners_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/header_partners"
            android:layout_margin="@dimen/margin_small"
            android:divider="@null"
            android:orientation="vertical" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>